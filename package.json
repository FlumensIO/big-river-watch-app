{
  "name": "big-river-watch",
  "title": "Big River Watch",
  "version": "1.2.0",
  "scripts": {
    "start": "webpack serve --progress --port 8000",
    "build": "NODE_ENV=production webpack",
    "build:production": "npm run clean && npm run build && npx cap sync && npm run build:resources",
    "build:resources": "mkdir -p resources && cp -R other/designs/android resources && cp -R other/designs/*.png resources && npx cordova-res ios --skip-config --resources resources --copy && npx cordova-res android --skip-config --resources resources --copy",
    "check": "npx tsc --noEmit --skipLibCheck && npm run test:eslint",
    "deploy": "cp other/demo.html build/ && URL=$(vercel --prod -t $VERCEL_TOKEN --yes -A ./other/vercel.json ./build) && CLEAN_URL=$(echo $URL | sed -r \"s/https:\\/\\/(.*)$/\\1/g\") && DEMO_URL=$(echo $CLEAN_URL | sed -r \"s/(.*\\-)[a-z0-9]+\\-flumens(\\.vercel\\.app)$/\\1${BITRISE_BUILD_NUMBER}\\2/g\") && envman add --key DEMO_URL --value \"https://$DEMO_URL\"",
    "deploy:production": "bitrise run ci",
    "clean": "rm -rf build resources",
    "test": "jest --silent --passWithNoTests",
    "test:watch": "jest --watchAll",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --watch test",
    "test:eslint": "eslint src --quiet --ext .jsx --ext .ts --ext .tsx --ext .js && echo '\\033[37;42;1m PASS \\033[00m'",
    "backup": "node other/backup.js"
  },
  "dependencies": {
    "@capacitor-community/sqlite": "^7.0.1",
    "@capacitor/android": "7.4.3",
    "@capacitor/app": "7.1.0",
    "@capacitor/camera": "7.0.2",
    "@capacitor/core": "7.4.3",
    "@capacitor/device": "7.0.2",
    "@capacitor/filesystem": "7.1.4",
    "@capacitor/geolocation": "7.1.5",
    "@capacitor/ios": "7.4.3",
    "@capacitor/network": "7.0.2",
    "@capacitor/share": "^7.0.2",
    "@capacitor/splash-screen": "7.0.3",
    "@capacitor/status-bar": "7.0.3",
    "@flumens/bigu": "0.4.1",
    "@flumens/ionic": "2.0.0-alpha.81",
    "@flumens/models": "0.12.4",
    "@flumens/tailwind": "0.36.2",
    "@flumens/utils": "^0.6.0",
    "@ionic-native/core": "5.36.0",
    "@ionic/core": "8.7.6",
    "@ionic/react": "8.7.6",
    "@ionic/react-router": "8.7.6",
    "@sentry/browser": "7.114.0",
    "@sentry/integrations": "7.114.0",
    "@supabase/supabase-js": "2.75.0",
    "axios": "1.12.2",
    "capacitor-blob-writer": "^1.1.19",
    "clsx": "2.1.1",
    "deep-diff": "1.0.2",
    "drizzle-orm": "^0.44.6",
    "i18next": "25.6.0",
    "ionicons": "7.4.0",
    "jeep-sqlite": "^2.8.0",
    "mobx": "6.15.0",
    "mobx-react": "9.2.1",
    "mobx-utils": "6.1.1",
    "mock-geolocation": "1.0.11",
    "postcode": "5.1.0",
    "react": "19.2.0",
    "react-autosuggest": "10.1.0",
    "react-dom": "19.2.0",
    "react-i18next": "15.5.3",
    "react-map-gl": "8.1.0",
    "react-router": "5.3.4",
    "react-router-dom": "5.3.4",
    "react-window": "1.8.11",
    "sql.js": "1.12.0",
    "swiper": "12.0.2",
    "tailwind": "^4.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/plugin-proposal-private-property-in-object": "7.21.11",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-exponentiation-operator": "7.27.1",
    "@babel/plugin-transform-runtime": "7.28.3",
    "@babel/preset-env": "7.28.3",
    "@babel/preset-react": "7.27.1",
    "@babel/preset-typescript": "7.27.1",
    "@capacitor/cli": "7.4.3",
    "@flumens/eslint-config": "2.1.1",
    "@flumens/onedrive-upload": "1.1.0",
    "@flumens/prettier-config": "0.4.0",
    "@flumens/webpack-config": "6.0.2",
    "@types/jest": "30.0.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.1",
    "@types/react-router": "5.1.20",
    "@types/react-router-dom": "5.3.3",
    "babel-jest": "30.2.0",
    "babel-plugin-module-resolver": "5.0.2",
    "copy-webpack-plugin": "^13.0.1",
    "cordova-res": "0.15.4",
    "dotenv": "17.2.3",
    "eslint": "8.57.0",
    "husky": "^9.1.7",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "jest-transform-stub": "2.0.0",
    "supabase": "2.48.3",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "vercel": "48.2.9",
    "webpack": "5.102.1",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.2"
  },
  "browserslist": [
    "ChromeAndroid >= 89",
    "iOS >= 15"
  ],
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "author": {
    "name": "Flumens",
    "email": "enquiries@flumens.io",
    "url": "https://flumens.io"
  },
  "babel": {
    "assumptions": {
      "setPublicClassFields": true
    },
    "presets": [
      [
        "@babel/react",
        {
          "runtime": "automatic"
        }
      ],
      [
        "@babel/env",
        {
          "loose": true,
          "modules": "commonjs",
          "corejs": "3.22",
          "useBuiltIns": "usage"
        }
      ],
      [
        "@babel/typescript",
        {
          "allowDeclareFields": true
        }
      ]
    ],
    "plugins": [
      [
        "@babel/transform-runtime",
        {
          "regenerator": true
        }
      ],
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "alias": {
            "@flumens$": "./src/common/flumens",
            "common": "./src/common",
            "helpers": "./src/common/helpers",
            "models": "./src/common/models",
            "Components": "./src/common/Components"
          }
        }
      ],
      [
        "@babel/proposal-private-property-in-object",
        {
          "loose": true
        }
      ],
      "@babel/transform-exponentiation-operator",
      "@babel/syntax-dynamic-import"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@flumens",
      "plugin:react/jsx-runtime"
    ],
    "rules": {
      "import/order": 0,
      "react/function-component-definition": 0,
      "arrow-body-style": 0,
      "camelcase": 0,
      "jsx-a11y/no-noninteractive-element-interactions": 0,
      "prefer-arrow-callback": 0,
      "react/no-unused-class-component-methods": 0,
      "sort-class-members/sort-class-members": 0,
      "react/prop-types": 0,
      "react/jsx-no-useless-fragment": 0,
      "@typescript-eslint/no-empty-function": 0,
      "react/jsx-no-bind": 0,
      "class-methods-use-this": 0,
      "@typescript-eslint/no-var-requires": 0,
      "no-restricted-exports": 0,
      "default-param-last": 0,
      "@typescript-eslint/no-this-alias": 0,
      "@getify/proper-arrows/name": 0
    }
  },
  "prettier": "@flumens/prettier-config",
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      ".+\\.(t|j)sx?$": [
        "babel-jest",
        {
          "presets": [
            "@babel/env"
          ]
        }
      ]
    },
    "testRegex": "src.*((\\.|/*.)(spec))\\.(t|j)s?$",
    "moduleNameMapper": {
      ".+.(css|style|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "ionic-native": "jest-transform-stub",
      "swiper": "jest-transform-stub"
    },
    "moduleDirectories": [
      "node_modules",
      "components",
      "src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ionic|@stencil|ionicons)"
    ]
  }
}
